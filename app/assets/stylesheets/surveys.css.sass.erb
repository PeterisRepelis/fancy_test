.survey_content
	width 900px
	height: 253px
	margin: 60px auto 0 auto
	background: #fff url('<%= asset_path('fons2.png')%>') center no-repeat
.survey-top_left 
	height: 37px
	width: 200px
	float: left
	margin: -18px 0 0 18px
#first_step 
	background: url('<%= asset_path('stepone_1.png')%>') center no-repeat
#second_step 
	background:url('<%= asset_path('steptwo_1.png')%>') center no-repeat
	margin: -18px 0 0 20px
.survey-top_right
	height: 59px
	width: 396px
	float: right
	margin: -25px -15px 0 0px
#first_step_arrow 
	background: url('<%= asset_path('stepone.png') %>') center no-repeat
#second_step_arrow
	background: url('<%= asset_path('step_two_arrow.png') %>') left -2px no-repeat

.labels 
	float: left
	height: 176px
	width: 308px
	margin: 10px 0px 0 30px


#survey-1 
	background: url('<%= asset_path('stepone_2.png') %>') 170px center no-repeat	


#survey-2 
	background: url('<%= asset_path('steptwo.png') %>') center left no-repeat	


#survey_submit_action 
	float:left

#survey_submit_action 
	input 
		height: 56px
		width: 151px
		background: url('<%= asset_path('save_button.png') %>') center no-repeat
		margin: 70px 0px 0 74px
		cursor: pointer
		border: none

.survey_content 
	select 
		border: none
		margin-left: 0px
		background: white
		height: 33px
		margin-bottom: 3px
		border: 1px solid #c1b8b6
		padding: 0 3px

.survey_content 
	input 
		background: white
		height: 33px
		border: 1px solid #c1b8b6
		width: 188px
		padding: 0 10px
		margin-bottom: 3px


#survey_birthday_input li, #survey_question_4_input li 
	float: left
	margin-right: 3px
#survey_birthday_input label, #survey_question_4_input label
	display: none

.error_popup 
	width: 400px
	min-height: 200px
	padding: 14px
	border: 1px solid red
	background: rgba(255,255,255,0.9)
	position: fixed
	left: 50%
	margin-left: -200px
	top: 50%
	margin-top: -100px
	color: red
	font-weight: bold
	text-align: center


.random_gif img
	max-height: 120px
	margin: 5px 
	width: auto
.random_gif 
	width: 900px 
	text-align: center
.congratulations-text 
	padding-top: 50px
	float:left
	margin: 50px 0 0 60px
	width: 800px
	height: 50px 
	background: url('<%= asset_path('stepthree.png') %>') center no-repeat


.inline-errors 
	display: none
#survey_birthday_1i 
	width: 62px
#survey_birthday_2i 
	width: 80px
#survey_birthday_3i 
	width: 62px			