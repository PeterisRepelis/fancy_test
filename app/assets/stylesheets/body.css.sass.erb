@font-face
	font-family: “Myriad Pro”
	src: url('<%= asset_path('fonts/MyriadPro-Regular.otf') %>')
.container 
	margin: 14px auto 0 auto
	width: 1262px
	background-image: url('<%= image_path('tick.png') %>')

.content 
	width: 903px
	height: 600px
	padding: 60px 180px 0 180px
	background: url('<%= asset_path('fons.png') %>')


.top 	
	height: 68px
	width: 1263px
	background: url('<%= asset_path('up.png') %>')


.footer 	
	height: 36px
	width: 1263px
	background: url('<%= asset_path('footer.png') %>')


.logo 	
	height: 73px
	width: 349px
	float: left
	background: url('<%= asset_path('logo.png') %>') center no-repeat
	margin: 3px 0 0 140px


.terms 
	width: 340px
	height: 147px
	background: url('<%= asset_path('text.png') %>') center no-repeat
	float: left



.counter 
	margin: -5px 0 0 120px
	width: 419px
	height: 157px
	background: url('<%= asset_path('fons1.png') %>') center no-repeat
	float: right
	clear: right



.counter_inner 
	margin: 16px 0 0 13px
	width: 409px
	height: 156px
.timer_top
	width: 390px
	height: 26px
	background: url('<%= asset_path('clock-mock.png') %>') left top no-repeat
.seconds
	font-family: “Myriad Pro”
	float: left
	width: 225px
	height: 90px
	margin: 50px 0 0 -16px
	color: #d5d5d5
	font-size: 58px
	font-weight: bold
	letter-spacing: -3px

.time 
	float: left
	font-weight: bold
	width: 160px
	height: 100px
	font-family: “Myriad Pro”
	font-size: 58px
	color: #0b8185
	z-index: 99
	letter-spacing: -3px
	margin-top: 48px


.clear 
	width: 100%
	clear: both

